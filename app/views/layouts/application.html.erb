<!DOCTYPE html>
<html>
<head>
  <title>Destinos√©</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link rel="icon"
  type="image/png"
  href="<%= image_path 'destinose-icon.png' %>">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title><%= meta_title %></title>
  <meta name="description" content="<%= meta_description %>">

  <!-- Facebook Open Graph data -->
  <meta property="og:title" content="<%= meta_title %>" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:image" content="<%= image_url(meta_image) %>" />
  <meta property="og:description" content="<%= meta_description %>" />
  <meta property="og:site_name" content="<%= meta_title %>" />
  <meta property="fb:app_id" content="1009238982515764" />


  <!-- Twitter Card data -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="<%= twitter_account %>">
  <meta name="twitter:title" content="<%= meta_title %>">
  <meta name="twitter:description" content="<%= meta_description %>">
  <meta name="twitter:creator" content="<%= twitter_account %>">
  <meta name="twitter:image:src" content="<%= image_url(meta_image) %>">

  <!-- Google+ Schema.org markup -->
  <meta itemprop="name" content="<%= meta_title %>">
  <meta itemprop="description" content="<%= meta_description %>">
  <meta itemprop="image" content="<%= image_url(meta_image) %>">

  <!-- Google Analytics tracking code -->
  <%= render 'layouts/google_analytics' %>
</head>

<body>

  <!-- navbar -->
  <% unless controller_name == "pages" && action_name == 'search' %>
  <%= render 'shared/navbar' %>
  <% end %>

  <!-- adding notices for Devise -->
  <%= render 'shared/flashes' %>

  <!-- rendering view -->
  <%= yield %>
  <%= javascript_include_tag "https://maps.google.com/maps/api/js?key=#{ENV['GOOGLE_MAPS']}&libraries=places" %>
  <%= javascript_include_tag "https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/markerclusterer/src/markerclusterer_compiled.js"  %>
  <%= javascript_include_tag "https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js"  %>
  <%= javascript_include_tag "application" %>



  <!--   <%#= javascript_include_tag "jquery.geocomplete.js" %> -->

  <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- allowing for Google map JS dependencies -->

  <%= yield(:after_js) %>

</body>
</html>
